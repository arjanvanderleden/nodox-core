{
  "name": "nodox-core",
  "version": "0.1.9",
  "description": "Nodox core classes",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "generate-schemas": "typescript-json-schema ./tsconfig.json \"*\" --include src/types/core.ts --useTypeOfKeyword --out src/schemas/generated.schema.json",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "test": "jest --coverage",
    "clean:dist": "rimraf ./dist",
    "prebuild": "npm run clean:dist",
    "build": "tsc",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arjanvanderleden/nodox-core.git"
  },
  "keywords": [
    "Nodox"
  ],
  "author": "arjan@vanderleden.dev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/arjanvanderleden/nodox-core/issues"
  },
  "homepage": "https://github.com/arjanvanderleden/nodox-core#readme",
  "dependencies": {
    "ajv": "^8.2.0",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "eslint": "^7.25.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.23.2",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.4",
    "typescript-json-schema": "^0.50.0"
  }
}
